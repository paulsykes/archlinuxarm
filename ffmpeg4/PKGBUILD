pkgname=ffmpeg4.4
pkgver=4.4.3
pkgrel=1
pkgdesc='Complete solution to record, convert and stream audio and video'
arch=('x86_64' 'aarch64')
url=https://ffmpeg.org/
license=(GPL3)
depends=(
  alsa-lib
  bzip2
  fontconfig
  fribidi
  gmp
  gnutls
